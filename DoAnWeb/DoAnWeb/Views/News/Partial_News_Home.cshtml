@model IEnumerable<DoAnWeb.Models.EF.News>
<section id="chefs" class="chefs" style="background-color: #0c0b09; border-top: 1px solid #37332a; ">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Tin Tức</h2>
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="blogs">
                <div class="container">
                    <div class="row blogs_container">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 blog_item_col">
                                <div class="blog_item">
                                    <div class="blog_background" style="background-image:url(@item.image)"></div>
                                    <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                        <h4 class="blog_title" style="color: #cda45e;">@item.title</h4>
                                        <span class="blog_meta">by @item.createdby | @item.createddate.ToString("MMM dd,yyyy")</span>
                                        <a class="blog_more" href="/tin-tuc">Xem thêm</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>
@model DoAnWeb.Models.EF.News
@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .tittle-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-height: 100%;
        max-width: 100%;
    }
</style>
<div class="container news_section_container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="tittle-news">@Model.title</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Model.description
            </div>
            <div class="col-md-12">
                @Html.Raw(Model.detail)
            </div>
        </div>

    }
</div>

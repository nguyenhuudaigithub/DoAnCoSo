@model DoAnWeb.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LayOutSR.cshtml";
}

<div class="col-md-6 right">
    <div class="input-box">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <header style="font-size: 35px;">Khôi Phục Lại Mật Khẩu</header>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <label for="password" class="control-label">Nhập email đã đăng ký :</label>
            <div class="form-group d-flex">
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input", id = "email", autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-10  justify-content-between">
                <input type="submit" class="btn btn-outline-success" value="Email Link" />
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
